<vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="360dp"
    android:height="800dp"
    android:viewportWidth="360"
    android:viewportHeight="800">

    <group>
        <clip-path android:pathData="M0,0H360V800H0V0Z" />
        <group
            android:translateX="0"
            android:translateY="0"
            android:pivotX="180"
            android:pivotY="400"
            android:scaleX="1"
            android:scaleY="1"
            android:rotation="0">  <!-- 회전값을 조정할 수 있음 -->
            <path
                android:pathData="M0,0V800H360V0">
                <aapt:attr name="android:fillColor">
                    <gradient
                        android:type="linear"
                        android:startX="180"
                        android:startY="0"
                        android:endX="180"
                        android:endY="800">
                        <item
                            android:color="#CFE1FC"
                            android:offset="0.246" />
                        <item
                            android:color="#B8F3FF"
                            android:offset="0.952" />
                    </gradient>
                </aapt:attr>
            </path>
        </group>
    </group>
</vector>
